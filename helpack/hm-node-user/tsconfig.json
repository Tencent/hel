{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "outDir": "./build"
  },
  "include": ["src/**/*", "./ex-types.d.ts"]
}
